{% extends 'base.html.twig' %}

{% block title %}Liste des offres{% endblock %}


{% block body %}
    <div class="offer-title">Les dernières offres</div>
{% for offer in offers %}
<div class="card mb-3 offer-card" style="width: 70rem;">
    <div class="col-md-8"></div>
        <div class="card-body">
        <h5 class="card-title">{{ offer.title }}</h5>
            <div class="card-text">{{ offer.city }}</div>
            <div>Durée du poste : {{ offer.duration }}</div>
            <div>Description du poste : {{ offer.description }}</div>
            <div class="date">L'offre date de {{ offer.interval | date('%a') }} jours</div>
        </div>
</div>


{% endfor %}

{% endblock %}
