{% extends 'base.html.twig' %}

{% block title 'Mon compte' %}

{% block body %}

    <input
            type="range"
            min="0"
            max="5"
            step="1"
            data-buffer="0" />


    <div class="container">
        <h1 class="pt-3">Mon compte</h1>
        {% if is_granted('ROLE_COMPANY') %}
            {% include 'user/profile/_company.html.twig' %}
        {% else %}
            {% include 'user/profile/_candidate.html.twig' %}
        {% endif %}
    </div>
{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('range_slider') }}
    {% if is_granted('ROLE_CANDIDATE') %}
        {{ encore_entry_script_tags('candidate_graphic') }}
    {% endif %}
{% endblock %}
