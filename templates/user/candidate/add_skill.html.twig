{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h5 class="p-5 text-center">Ajoutez vos compétences techniques que vous pensez utiles à connaître pour un recruteur.</h5>

        <div class="d-flex">
            <div class="col-6 card-profile m-3">
                <div class="p-3">
                    {{ form_start(form) }}
                    {{ form_widget(form.title) }}
                    <button class="btn btn-success mt-3 float-right">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="col-6 card-profile m-3">
                {#
                    <ul class="list-group">
                        <li class="list-group-item active">Vos compétences :</li>
                        {% for skill in skills %}
                            <li class="list-group-item">
                                {{ skill.title }}
                            </li>
                        {% endfor %}
                    </ul>
                #}

                <h2 class="p-3 border-bottom-title">Compétences techniques</h2>
                <div class="m-3">
                    <p>
                        {% for skill in skills %}
                            <span class="badge badge-primary p-1">{{ skill.title }}</span>
                        {% endfor %}
                    </p>

                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a class="btn btn-primary mt-5" href="{{ path('profile') }}">Retour au profil</a>
        </div>
    </div>


{% endblock %}
